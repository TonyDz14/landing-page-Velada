			<a 
			class="hover:contrast-150 hover:scale-105 transition font-boxing text-4xl inline-block"
			href="https://kick.com/tonydz" target="_blank" rel="noopener norefferrer">Comprar entradas
			</a>
		</div>
	</div>
</div>
	<div id="combat"
	class="absolute bottom-48 z-50 mx-auto left-1/2 -translate-x-1/2 flex flex-col gap-y-24 opacity-0 invisible">

	<div 
	class="px-5 pt-3 pb-2 bg-black text-white text-center">
	<h3 class="font-boxing-striped text-7xl">MAYICHI</h3>
	</div>

	<span class="left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2 font-boxing text-green-500 text-9xl block absolute [text-shadow:2px_2px_0px_black,4px_4px_0px_gray,6px_6px_0px_black]">VS</span>

	<div 
	class="px-5 pt-3 pb-2 bg-white text-black text-center">
	<h3 class="font-boxing-striped text-7xl">AMOURANTH</h3>
	</div>
</div>
	</main>
</body>


	<footer></footer>
</html>

<style is:global>
	body {
		background: #131313;
	}

	@font-face {
		font-family: "Boxing" ;
		src: url("/public/BOXING/BOXING.ttf");
		font-weight: bold;
	}

	@font-face {
		font-family: "Boxing Striped";
		src: url("/public/BOXING/BOXING- striped.ttf");
		font-weight: bold;
	}
</style>

<script>
	const $boxers = document.querySelector("#boxers")
	const $boxersImages = $boxers.querySelectorAll("img")

	const $info = document.querySelector("#info")
	const $combat = document.querySelector("#combat")

	$boxersImages.forEach(($img) => {
		$img.addEventListener("mouseleave", () => {
			$boxersImages.forEach(($img) => {
				$img.setAttribute("style", "transition: all .3s ease-in-out")
			})

			$info.setAttribute("style", "opacity: 1; transition: all .3s ease-in-out")
			$combat.setAttribute("style", "opacity: 0; transition: all .3s ease-in-out; visibility: hiddem")
		})
		$img.addEventListener("mouseenter", () => {
			const sectionImages = $img.parentNode.children
			const position = Array.from(sectionImages).indexOf($img)
			//get image fot the left side and the rigth side
			const [leftBoxer, rightBoxer] = [
				$boxersImages[position], //de la izquierda
				$boxersImages[position + $boxersImages.length / 2] // de la derecha
			]
			//cuando este encima de los luchadores oculto la info
			$info.setAttribute("style", "opacity: 0; transition: all .3s ease-in-out")
			$combat.setAttribute("style", "opacity: 1; transition: all .3s ease-in-out; visibility: visible")
			const [firsBoxerName, secondBoxerName] = $combat.querySelectorAll("h3")
			firsBoxerName.innerText = leftBoxer.alt
			secondBoxerName.innerText = rightBoxer.alt

			// ocultar los boxeadores que no interesan
			$boxersImages.forEach($img => {
				$img.setAttribute(
					"style",
					"filter: blur(2px) grayscale(.3); trnasition: all 3s ease-in-out"
				)
			})

			leftBoxer.setAttribute(
				"style",
				"scale: 1.05; contrast: 1.1; transition: all .3s ease-in-out"
			)
			rightBoxer.setAttribute(
				"style",
				"scale: 1.05; contrast: 1.1; transition: all .3s ease-in-out"
			)
		})
	})
</script>